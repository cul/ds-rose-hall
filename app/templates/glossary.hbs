<Text>
  <:header>Glossary</:header>

  <:toc>
    <ul>
      {{#each this.glossary as |entry|}}
        <li>
          <a href="#glossary-entry-{{entry.slug}}">{{entry.displayTerm}}</a>
        </li>
      {{/each}}
    </ul>
  </:toc>

  <:content>
    <dl class="space-y-2">
      {{#each this.glossary as |entry|}}
        <dt class="font-bold text-2xl">
          <a id="glossary-entry-{{entry.slug}}"
            class="bg-none hover:bg-none no-underline">
            {{capitalize entry.displayTerm}}
          </a>
        </dt>
        <dd class="prose">{{display-glossary-definition entry.definition}}</dd>
      {{/each}}
    </dl>
  </:content>
</Text>
