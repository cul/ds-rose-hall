<dl class="space-y-2">
  {{#each this.annotations.glossary as |entry|}}
    <dt class="font-bold text-3xl">
      <a name="glossary-entry-{{entry.slug}}"
        class="bg-none hover:bg-none no-underline
        text-4xl">
        {{capitalize entry.displayTerm}}
      </a>
    </dt>
    <dd class="prose">{{display-glossary-definition entry.definition}}</dd>
  {{/each}}
</dl>
