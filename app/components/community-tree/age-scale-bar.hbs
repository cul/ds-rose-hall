<g id="age-scale-bar" transform={{this.settings.transform}}>
  <rect x="0" y="0" 
    width={{this.settings.width}}
    height={{this.settings.height}} 
    fill="url(#age-scale-bar-gradient)"
  />
  <g id="age-scale-bar-axis"
    transform={{this.settings.axisTransform}}>
    <text text-anchor={{this.settings.textAnchor}}
      transform="translate({{div this.settings.width 2}}, 45)">
        Age
    </text>
    <line 
      x1={{this.settings.axisX1}}
      y1={{this.settings.axisY1}}
      x2={{this.settings.axisX2}}
      y2={{this.settings.axisY2}}
    />
    {{#each (array 0 10 20 30 40 50 60 70 80) as |age|}}
      <g transform={{fn this.axisTicksTransform age}}>
        <line x1="0" y1={{this.tickOffset}} x2="0" y2="{{this.tickLength}}" stroke="black" />
        <text text-anchor="middle"
          transform="translate(0, {{add this.tickLength 15}})"
        >{{age}}</text>
      </g>
    {{/each}}
  </g>
</g>

