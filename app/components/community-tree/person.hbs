<g 
  class="person-petal"
  id={{concat @person.personId "-g"}} 
  transform="rotate({{this.rotationAngle}})" 
>
  <path 
    class="cursor-pointer"
    fill={{this.gradientUrl}}
    transform={{if (eq this.activePerson.personId @person.personId) 
      "scale(2, 1)"
      "scale(1, 1)"
    }}
    d={{this.path}}
    role="button"
    {{on "click" (fn this.setActivePerson @person.personId)}}
    />
  <path 
    class="pointer-events-none highlighter
      {{if (eq this.activePerson.personId @person.personId) " active "}}
    "
    transform={{if (eq this.activePerson.personId @person.personId) 
      "scale(2, 1)"
      "scale(1, 1)"
    }}
    d={{this.path}}
    />
</g>
