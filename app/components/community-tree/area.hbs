<g class="community-tree-sorters">
  {{#if this.clustered}}
    <g 
      class="community-tree-area" 
      transform={{this.svg.circleTransform}}
      >
      {{#each this.clusters as |arc index|}}
        <path 
          mask="url(#gradient-mask)"
          fill-opacity="0.25"
          fill={{arc.color}}
          stroke={{arc.color}}
          stroke-width="0"
          stroke-opacity="1"
          d={{arc.d}}
          filter={{if this.active (concat "url(#area-glow-" index ")") "none"}}
        />

        <path 
          id="{{arc.title}}-title-path"
          fill={{arc.color}}
          fill-opacity="0.5"
          stroke={{arc.color}}
          stroke-width="0"
          stroke-opacity="1"
          d={{arc.border}}
          />
        {{/each}}
    </g>
  {{/if}}
</g>

