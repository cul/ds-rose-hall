{{#let this.color as |color|}}
  <g class="frond" opacity="0.8">
    <path class="frond-stem" stroke={{color}}
      stroke-width=".5rem"
      fill="none" {{build-stem this.setStemAndLeaves}}
      />
    <text transform="translate(150, 150)">{{this.svg.width}} ||</text>
    {{#each this.leafs as |leaf|}}
      <g class="frond-leaf" transform={{leaf.transform}}>
        <path class="frond-leaf-stem" stroke={{color}}
        stroke-width=".25rem"
        fill="none" d={{leaf.stemD}} />
        <path class="frond-leaf" d={{leaf.d}} 
        transform={{leaf.leafRotation}}
        fill={{color}}
        stroke="none"/>
      </g>
    {{/each}}
  </g>
{{/let}}



