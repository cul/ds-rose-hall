<div>
  {{#each this.annotations.thesaurus as |entry|}}
    <div class="
    tooltip
    thesaurus-tooltip
    hidden
    " id={{concat "thesaurus-definition-" entry.slug}} role="tooltip">
      {{entry.definition}}
      <div 
        id={{concat "thesaurus-definition-" entry.slug "-arrow"}} data-popper-arrow
        class="arrow"
      ></div>
    </div>
  {{/each}}
 </div>
