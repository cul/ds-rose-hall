<li class="overflow-y-hidden 
{{if this.active "bg-green-200 shadow-md mb-2" "bg-green-100"}}
  
"
  data-person-id={{@person.id}}>
  <h4 class="
    {{if this.active "pl-2 pt-2 text-3xl" "hover:underline font-bold"}}" 
    {{on "click" this.setActivePerson}} role="button">
    {{@person.name}}
  </h4>
  <AnimatedContainer class="overflow-hidden">
    {{#animated-if this.active use=this.transition duration = 1}}
      {{#let (if (eq @person.gender "Male") "He" "She") as |pronoun|}}
      <div class="p-2">
        <p>
          {{@person.name}} was born in or around {{@person.birthYear}}. {{pronoun}} left
          Rose Hall in {{@person.exitYear}}. {{pronoun}} were classified as
          “{{@person.colour}}” in color and “{{@person.country}}” in origin.
        </p>
      </div>
      {{/let}}
    {{/animated-if}}
  </AnimatedContainer>
</li>
