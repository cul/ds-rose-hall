<article class="flex flex-row justify-center overflow-auto h-full py-4 px-8">
  <section
    class="
    bg-slate-50/80 md:bg-slate-50 
    prose
    prose-xl
    prose-h1:text-4xl
    prose-h2:text-3xl 
    prose-h3:text-2xl 
    prose-a:text-green-800 hover:prose-a:bg-green-100 
    "
    ...attributes
    {{stop-modal}}
  >
    <header class="w-full">
      <h1>
        {{yield to="header"}}
      </h1>
    </header>

    <div class="flex flex-row space-x-4">
      <aside class="flex-grow-0">
        {{yield to="toc"}}
      </aside>
      <section class="
      text-justify overflow-auto flex-grow">
      {{yield to="content"}}
      </section>
    </div>
  </section>
</article>
