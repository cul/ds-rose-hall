<header class="z-50 md:z-0 
  fixed top-0 left-0 md:relative 
  h-9 md:h-24
  w-full
  bg-green-600 
  ">
  <div class="w-full h-9 md:h-16 flex flex-row justify-between text-slate-50
  bg-no-repeat
  bg-right
  bg-contain
  flag-background
  py-2
  px-4
  ">
    <div class="h-full flex flex-col md:flex-row align-center items-center">
      <LinkTo @route="index" {{on "click" this.hideNavbar}}>
        <p class="text-xl md:text-4xl font-title text-slate-50">(Un)Silencing Slavery</p>
      </LinkTo>
      <p class="text-sm font-title">Remembering the Enslaved at Rose Hall Plantation, Jamaica</p>
    </div>
    <button class="h-full md:hidden block shadow-lg border-white border rounded-sm" type="button" {{on "click" this.toggleNavbar}}>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0
      24 24" fill="none" stroke="currentColor" stroke-width="2"
      stroke-linecap="round" stroke-linejoin="round" 
      class="h-full feather feather-menu">
        <rect width="24" height="24" stroke-width="0" fill="#404040" fill-opacity=".5"/>
        <line x1="4" y1="12" x2="20" y2="12"></line>
        <line x1="4" y1="6" x2="20" y2="6"></line>
        <line x1="4" y1="18" x2="20" y2="18"></line>
      </svg>
    </button>
  </div>
  <NavBar @visible={{this.navbarVisible}} @hideNavDropdown={{this.hideNavbar}} />
</header>
