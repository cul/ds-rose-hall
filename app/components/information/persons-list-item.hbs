<li class="
text-sm
pb-0.5
rounded-sm
px-2
hover:underline
truncate
{{if this.active "italic bg-green-200 shadow-inner" "hover:bg-green-200"}}
  "
  data-person-id={{@person.personId}}
>
  <LinkTo @route="index.person" @model={{@person.personSlug}}>
    <p
      class="truncate
        {{if this.familyIndent this.familyIndent.class}} 
        {{if (and this.familyIndent this.isMother) "italic" ""}}
      "
      {{on "click" this.setActivePerson}} role="button">
      {{#if this.familyIndent}}
        <span class="not-italic">{{this.familyIndent.text}}</span>
      {{/if}}
      {{@person.name}}
    </p>
  </LinkTo>
</li>
