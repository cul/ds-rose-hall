<header>
  <div class="flex flex-row justify-between text-green-900">
    <h3 class="text-xl md:text-2xl pt-3 font-title">Enslaved Persons of Rose Hall</h3>
    <button 
      class="
      border rounded-sm px-2
      {{if this.sortmenuVisible "bg-green-800 text-slate-50 border-slate-50" "border-green-900"}}
      hover:bg-green-800 hover:text-slate-50 hover:border-slate-50 transition-colors ease-in-out" 
      type="button" 
      {{on "click" this.toggleSortmenu}}>
      <span class="hidden">Sort</span>
      {{svg-jar "sort" class="fill-current"}}
    </button>
  </div>
  <Information::SortMenu 
    @route={{this.route}} 
    @visible={{this.sortmenuVisible}} 
    @sortKeys={{this.sortKeys}}
    @sortKey={{this.data.sortKey}}
    @close={{this.hideSortmenu}} 
    />
</header>
