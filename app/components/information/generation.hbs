{{#each @generation as |entry index|}}
  {{#let (if @motherBgClasses @motherBgClasses (concat "bg-category-" (mod index 7))) as |motherBgClasses|}}
    {{#if entry.length}}
      <Information::PersonsListItem @person={{get-person entry}} class="{{@liClasses}}"/>
    {{else}}
      {{#each-in entry as |motherId offspring|}}
        <Information::Mother 
          @motherId={{motherId}} 
          @offspring={{offspring}}
          @motherBgClasses={{motherBgClasses}}
          @liClasses={{@liClasses}}
        />
      {{/each-in}}
    {{/if}}
  {{/let}}
{{/each}}
